<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".ui.CreatePoll.CreatePollFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="346dp"
        android:layout_height="100dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="535dp"
        android:gravity="center"
        android:text="Create POLL"
        android:textColor="#0AF8F8"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/createtv"
        android:layout_width="314dp"
        android:layout_height="87dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="74dp"
        android:clickable="true"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="Create"
        android:textColor="#CEE3E3"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="441dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Enter Your Question Here"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="354dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 1"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <EditText
        android:id="@+id/option2"
        android:layout_width="409dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="248dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 2"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <EditText
        android:id="@+id/option3"
        android:layout_width="402dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="144dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 3"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

</androidx.constraintlayout.widget.ConstraintLayout>