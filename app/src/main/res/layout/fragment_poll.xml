<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    tools:context=".ui.CreatePoll.CreatePollFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="325dp"
        android:layout_height="69dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="614dp"
        android:gravity="center"
        android:text="Create POLL"
        android:textColor="#0AF8F8"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createtv"
        android:layout_width="282dp"
        android:layout_height="59dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="52dp"
        android:clickable="true"
        android:fontFamily="@font/berkshire_swash"
        android:gravity="center"
        android:text="Create"
        android:textColor="#CEE3E3"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="492dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Enter Your Question Here"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/option1"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="396dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 1"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/option2"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="308dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 2"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/option3"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="228dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 3"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/option4"
        android:layout_width="411dp"
        android:layout_height="72dp"
        android:layout_marginBottom="133dp"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Option 4"
        android:inputType="textPersonName"
        android:textColor="#F1E8E8"
        android:textColorHint="#0ACCB1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>