<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0000"
    tools:context=".Loginactivity">

    <Button
        android:id="@+id/login2"
        android:layout_width="211dp"
        android:layout_height="78dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="187dp"

        android:background="@drawable/roundbutton"

        android:onClick="login"
        android:text="@string/login"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="249dp"
        android:layout_height="89dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="69dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#17D4DA"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/personName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personName2"
        android:layout_width="267dp"
        android:layout_height="72dp"

        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"

        android:textColor="#F8F7F5"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="269dp"
        android:layout_height="66dp"

        android:layout_marginStart="70dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="72dp"

        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName|textEmailSubject"
        android:textColor="#F3EAEA"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName2" />
</androidx.constraintlayout.widget.ConstraintLayout>