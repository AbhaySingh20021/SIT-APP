<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090000"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="409dp"
        android:layout_height="188dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bigusername"
            android:layout_width="147dp"
            android:layout_height="118dp"
            android:layout_marginStart="133dp"
            android:layout_marginEnd="163dp"
            android:layout_marginBottom="87dp"
            android:foregroundGravity="fill"
            android:gravity="fill"
            android:text="@string/string_c"

            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#F1E9E9"
            android:textSize="90sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="14dp"
            android:background="#090909"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="#F4EFEF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bigusername"
            app:layout_constraintVertical_bias="0.708" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_marginStart="323dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="32dp"
        android:background="#090909"
        android:clickable="true"
        android:foreground="@android:drawable/ic_input_add"
        android:paddingHorizontal="20sp"
        android:paddingVertical="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:useCompatPadding="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="294dp"
        android:layout_height="135dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="257dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/berkshire_swash"
        android:text="@string/create_poll"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>